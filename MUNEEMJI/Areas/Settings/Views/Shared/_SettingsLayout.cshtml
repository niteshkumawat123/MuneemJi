<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Settings</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
        }

        .settings-container {
            display: flex;
            height: 100vh;
        }

        .settings-sidebar {
            width: 260px;
            background-color: #334155;
            color: white;
            display: flex;
            flex-direction: column;
        }

        .settings-header {
            background-color: #1e293b;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #475569;
        }

        .settings-title {
            font-size: 1.125rem;
            font-weight: 500;
            margin: 0;
        }

        .search-icon {
            width: 20px;
            height: 20px;
            cursor: pointer;
            opacity: 0.7;
        }

        .settings-nav {
            flex: 1;
            padding: 1rem 0;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-item {
            margin-bottom: 2px;
        }

        .nav-link {
            display: block;
            padding: 0.875rem 1.5rem;
            color: #cbd5e1;
            text-decoration: none;
            font-weight: 500;
            font-size: 0.875rem;
            letter-spacing: 0.025em;
            transition: all 0.15s ease;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
        }

            .nav-link:hover {
                background-color: #475569;
                color: white;
            }

            .nav-link.active {
                background-color: white;
                color: #334155;
                border-right: 3px solid #3b82f6;
            }

        .main-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .content-header {
            background-color: white;
            padding: 1.5rem;
            border-bottom: 1px solid #e2e8f0;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
        }

        .content-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1f2937;
            margin: 0;
        }

        .content-body {
            flex: 1;
            padding: 1.5rem;
            overflow-y: auto;
            background-color: #f8f9fa;
        }

         media (max-width: 768px) {
            .settings-sidebar

        {
            width: 100%;
            position: fixed;
            z-index: 1000;
            transform: translateX(-100%);
            transition: transform 0.3s ease;
        }

        .settings-sidebar.show {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        }
    </style>

</head>
<body>
    <div class="settings-container">
        <!-- Settings Sidebar -->
        <div class="settings-sidebar" id="settingsSidebar">
            <div class="settings-header">
                <h1 class="settings-title">Settings</h1>
                <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </div>

            <nav class="settings-nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a href="/Settings/General" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "General" ? "active" : "")">
                            GENERAL
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/Transaction" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Transaction" ? "active" : "")">
                            TRANSACTION
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/Print" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Print" ? "active" : "")">
                            PRINT
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/TaxesGst" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "TaxesGst" ? "active" : "")">
                            TAXES & GST
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/TransactionMessage" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "TransactionMessage" ? "active" : "")">
                            TRANSACTION MESSAGE
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/Party" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Party" ? "active" : "")">
                            PARTY
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/Item" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Item" ? "active" : "")">
                            ITEM
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/ServiceReminders" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ServiceReminders" ? "active" : "")">
                            SERVICE REMINDERS
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Settings/Accounting" class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Accounting" ? "active" : "")">
                            ACCOUNTING
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <!-- Main Content Area -->
        <div class="main-content">
            <div class="content-header">
                <h2 class="content-title">@ViewData["Title"]</h2>
            </div>

            <main class="content-body">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Mobile sidebar toggle functionality
        function toggleSidebar() {
            const sidebar = document.getElementById('settingsSidebar');
            sidebar.classList.toggle('show');
        }

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('settingsSidebar');
            const isClickInsideSidebar = sidebar.contains(event.target);

            if (!isClickInsideSidebar && window.innerWidth <= 768) {
                sidebar.classList.remove('show');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>