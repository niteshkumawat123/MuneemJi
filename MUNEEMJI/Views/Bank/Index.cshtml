                        <label class="form-label">To</label>
                        <select class="form-select">
                            <option>lokesh saini</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Amount</label>
                        <input type="text" class="form-input amount" placeholder="">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Adjustment Date</label>
                        <input type="date" class="form-input" value="2025-06-14">
                    </div>
                </div>
                <button class="description-btn">📎 Add Description</button>
                <div class="attachment-icon">📎</div>
                <div class="clearfix">
                    <button class="save-btn">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bank Adjustment Modal -->
    <div class="modal-overlay" id="adjustmentModal">
        <div class="modal">
            <div class="modal-header">
                <h3 class="modal-title">Bank Adjustment Entry</h3>
                <button class="close-btn" onclick="closeModal('adjustmentModal')">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Account Name</label>
                        <select class="form-select">
                            <option>lokesh saini</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Type</label>
                        <select class="form-select">
                            <option>Increase balance</option>
                            <option>Decrease balance</option>
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Amount</label>
                        <input type="text" class="form-input amount" placeholder="">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Adjustment Date</label>
                        <input type="date" class="form-input" value="2025-06-14">
                    </div>
                </div>
                <button class="description-btn">📎 Add Description</button>
                <div class="attachment-icon">📎</div>
                <div class="clearfix">
                    <button class="save-btn">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    let isDropdownOpen = false;

    function toggleDropdown() {
        const menu = document.getElementById('dropdownMenu');
        const arrow = document.getElementById('dropdownArrow');

        isDropdownOpen = !isDropdownOpen;

        if (isDropdownOpen) {
            menu.classList.add('show');
            arrow.classList.add('open');
        } else {
            menu.classList.remove('show');
            arrow.classList.remove('open');
        }
    }

    function openModal(type) {
        // Close dropdown first
        toggleDropdown();

        // Open appropriate modal
        let modalId;
        switch (type) {
            case 'bankToCash':
                modalId = 'bankToCashModal';
                break;
            case 'cashToBank':
                modalId = 'cashToBankModal';
                break;
            case 'bankToBank':
                modalId = 'bankToBankModal';
                break;
            case 'adjustment':
                modalId = 'adjustmentModal';
                break;
        }

        document.getElementById(modalId).classList.add('show');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('show');
    }

    // Close dropdown when clicking outside
    document.addEventListener('click', function (event) {
        const dropdown = document.querySelector('.dropdown-container');
        if (!dropdown.contains(event.target) && isDropdownOpen) {
            toggleDropdown();
        }
    });

    // Close modal when clicking outside
    document.addEventListener('click', function (event) {
        const modals = document.querySelectorAll('.modal-overlay');
        modals.forEach(modal => {
            if (event.target === modal) {
                modal.classList.remove('show');
            }
        });
    });
</script>