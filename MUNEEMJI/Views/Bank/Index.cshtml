@model List<MUNEEMJI.Models.BankAccount.BankAccountModel>
@{
    ViewBag.Title = "Bank Accounts";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Left column: Account list and search/add -->
        <div class="col-md-3 bg-light p-3">
            <!-- Search bar -->
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search accounts..." />
            </div>
            <!-- Add Bank button -->
            <button class="btn btn-warning w-100 mb-3">
                @* <i class="bi bi-plus" href="/Bank/AddBankAccount"></i> Add Bank *@

                <a href="/Bank/AddBankAccount" class="text-decoration-none">
                    <i class="bi bi-plus"></i> Add Bank
                </a>
            </button>
            <!-- Accounts table -->
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ACCOUNT NAME</th>
                        <th>AMOUNT</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var acc in Model)
                    {
                        // Highlight the selected account (first in list) using Bootstrap's 'table-active' class
                        var isSelected = (acc.Id == Model[0].Id);
                        <tr class="@(isSelected ? "table-active" : "")">
                            <td>
                                <i class="bi bi-bank"></i>
                                <a href="/Bank/Index?id=@acc.Id">
                                    @acc.AccountDisplayName
                                </a>
                            </td>
                            <td>₹@acc.OpeningBalance.Value.ToString("N2")</td>
                            <td><i class="bi bi-three-dots-vertical"></i></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Right column: Selected account details and transactions -->
        <div class="col-md-9 p-3">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h5>
                        Bank Name: @Model[0].AccountDisplayName
                        <i class="bi bi-box-arrow-up-right"></i>
                    </h5>
                    <p><strong>Account Number:</strong> @Model[0].AccountNumber</p>
                    <p><strong>IFSC Code:</strong> @Model[0].IFSCCode</p>
                    <p><strong>UPI ID:</strong> @Model[0].UPIID</p>
                </div>
                <div>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                            Deposit / Withdraw
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Deposit</a></li>
                            <li><a class="dropdown-item" href="#">Withdraw</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Transactions header and search -->
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="mb-0">TRANSACTIONS</h6>
                <div class="input-group" style="max-width: 300px;">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Search transactions..." />
                </div>
            </div>

            <!-- Transactions table -->
            <table class="table">
                <thead>
                    <tr>
                        <th>TYPE</th>
                        <th>NAME</th>
                        <th>DATE</th>
                        <th>AMOUNT</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Opening Balance</td>
                        <td>Opening Balance</td>
                        <td>@Model[0].AsOfDate.Value.ToString("dd/MM/yyyy")</td>
                        <td>₹@Model[0].OpeningBalance.Value.ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
