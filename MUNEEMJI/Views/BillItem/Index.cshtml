@model ItemViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // or your layout
}

    <style>

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: white;
            min-height: 100vh;
            padding: 0;
            margin: 0;
        }

        .container {
            width: 100vw;
            height: 100vh;
            margin: 0 auto;
            background: white;
            border-radius: 0;
            box-shadow: none;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            padding:0;
        }

        .header-tabs {
            background: #f8f9fa;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            padding: 0;
            flex-shrink: 0;
        }

        .tab {
            padding: 15px 30px;
            cursor: pointer;
            border-bottom: 3px solid transparent;
            color: #6c757d;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .tab.active {
                color: #007bff;
                border-bottom-color: #007bff;
                background: white;
            }

            .tab:hover {
                background: #e9ecef;
            }

        .main-content {
            display: flex;
            flex: 1;
            overflow: hidden;
            padding-left:0px;
        }

        .sidebar {
            width: 300px;
            background: #f8f9fa;
            border-right: 1px solid #e9ecef;
            padding: 20px;
            flex-shrink: 0;
            overflow-y: auto;
        }

        .search-box {
            position: relative;
            margin-bottom: 20px;
        }

            .search-box input {
                width: 100%;
                padding: 10px 15px 10px 40px;
                border: 1px solid #ddd;
                border-radius: 8px;
                font-size: 14px;
                transition: border-color 0.3s ease;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: #007bff;
                    box-shadow: 0 0 0 3px rgba(0,123,255,0.1);
                }

            .search-box i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #6c757d;
            }

        .add-item-btn {
            background: linear-gradient(45deg, #ff9500, #ffb347);
            color: white;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            width: 100%;
            margin-bottom: 20px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255,149,0,0.3);
        }

            .add-item-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(255,149,0,0.4);
            }

        .godown-select {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 8px;
            margin-bottom: 20px;
            background: white;
        }

        .item-list {
            background: white;
            border-radius: 8px;
            overflow: hidden;
        }

        .item-list-header {
            display: flex;
            background: #f8f9fa;
            padding: 10px;
            font-weight: 600;
            color: #495057;
            border-bottom: 1px solid #e9ecef;
        }

        .item-name {
            flex: 1;
        }

        .item-quantity {
            width: 80px;
            text-align: center;
        }

        .item-row {
            display: flex;
            padding: 12px;
            align-items: center;
            background: #e3f2fd;
            border-left: 4px solid #2196f3;
            margin: 1px 0;
            transition: all 0.3s ease;
        }

            .item-row:hover {
                background: #bbdefb;
                transform: translateX(5px);
            }

        .content-area {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .product-title {
            font-size: 24px;
            font-weight: 600;
            color: #2c3e50;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .adjust-btn {
            background: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .adjust-btn:hover {
                background: #0056b3;
                transform: translateY(-2px);
            }

        .product-info {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .info-card {
            background: linear-gradient(135deg, #e0e0e0 0%, #ffffff 100%);
            color: black;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
        }

            .info-card:hover {
                transform: translateY(-5px);
            }

        .info-label {
            font-size: 12px;
            opacity: 0.9;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-value {
            font-size: 18px;
            font-weight: 600;
        }

        .transactions-section {
            margin-top: 30px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .section-title {
            font-size: 20px;
            font-weight: 600;
            color: #2c3e50;
        }

        .search-transactions {
            position: relative;
            width: 300px;
        }

            .search-transactions input {
                width: 100%;
                padding: 8px 15px 8px 35px;
                border: 1px solid #ddd;
                border-radius: 6px;
                font-size: 14px;
            }

            .search-transactions i {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                color: #6c757d;
            }

        .transactions-table {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: linear-gradient(135deg, #e0e0e0 0%, #ffffff 100%);
            color: black;
            padding: 15px 12px;
            text-align: left;
            font-weight: 600;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        td {
            padding: 15px 12px;
            border-bottom: 1px solid #f1f3f4;
            color: #2c3e50;
        }

        tr:hover {
            background: #f8f9ff;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-partial {
            background: #fff3cd;
            color: #856404;
        }

        .status-complete {
            background: #d4edda;
            color: #155724;
        }

        .status-pending {
            background: #f8d7da;
            color: #721c24;
        }

        .transaction-indicator {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }

        .indicator-purchase {
            background: #28a745;
        }

        .indicator-sale {
            background: #dc3545;
        }

        .sort-icon {
            margin-left: 5px;
            opacity: 0.7;
        }

         (max-width: 768px) {
            .main-content

        {
            flex-direction: column;
        }

        .sidebar {
            width: 100%;
            max-height: 300px;
        }

        .product-info {
            grid-template-columns: 1fr;
        }

        .search-transactions {
            width: 100%;
            margin-top: 10px;
        }

        .section-header {
            flex-direction: column;
            align-items: flex-start;
        }

        }
    </style>


    <div class="container">
        <div class="header-tabs">
            <div class="tab active">PRODUCTS</div>
            <div class="tab">SERVICES</div>
            <div class="tab">CATEGORY</div>
            <div class="tab">UNITS</div>
        </div>

        <div class="d-flex">
            <div class="sidebar">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search items...">
                </div>

            <button class="add-item-btn" onclick="window.location.href='/Web/billitem/create';">
                    <i class="fas fa-plus"></i> Add Item
                </button>

                <select class="godown-select">
                    <option>Godown: All Godowns</option>
                    <option>Main Warehouse</option>
                    <option>Secondary Storage</option>
                    <option>Retail Store</option>
                </select>

                <div class="item-list">
                    <div class="item-list-header">
                        <div class="item-name">ITEM <i class="fas fa-filter"></i></div>
                        <div class="item-quantity">QUANTITY</div>
                    </div>
                    @foreach (var item in Model.ItemView)
                {
                    <div class="item-row">
                        <a class="list-group-item list-group-item-action d-flex justify-content-between align-items-center @(item.Id == Model.SelectedItem?.Id ? "active" : "")"
                       asp-action="Index" asp-route-id="@item.Id">
                        <div class="item-name">@item.ItemName</div>
                        <div class="item-quantity">@item.OpeningQuantity</div>
                        <i class="fas fa-ellipsis-v" style="margin-left: auto; color: #6c757d;"></i>
                        </a>
                    </div>
                }
                    
                </div>
            </div>

            <div class="content-area">
                <div class="product-header">
                    <div class="product-title">
                        <span>@Model.SelectedItem.ItemName</span>
                        <i class="fas fa-external-link-alt" style="color: #007bff; font-size: 16px;"></i>
                    </div>
                    <button class="adjust-btn">
                        <i class="fas fa-sliders-h"></i> ADJUST ITEM
                    </button>
                </div>

                <div class="product-info">
                    <div class="info-card">
                        <div class="info-label">Sale Price</div>
                    <div class="info-value">₹@Model.SelectedItem.SalePrice (excl)</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Purchase Price</div>
                    <div class="info-value">₹@Model.SelectedItem.PurchasePrice (excl)</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Stock Quantity</div>
                        <div class="info-value">@Model.SelectedItem.OpeningQuantity</div>
                    </div>
                    <div class="info-card">
                        <div class="info-label">Stock Value</div>
                        <div class="info-value">₹ @Model.SelectedItem.OnlineStorePrice</div>
                    </div>
                </div>

                <div class="transactions-section">
                    <div class="section-header">
                        <h3 class="section-title">TRANSACTIONS</h3>
                        <div class="search-transactions">
                            <i class="fas fa-search"></i>
                            <input type="text" placeholder="Search transactions...">
                        </div>
                    </div>

                    <div class="transactions-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>
                                        TYPE <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th>
                                        INVOICE/REF. <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th>
                                        NAME <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th>
                                        DATE <i class="fas fa-sort-down sort-icon"></i>
                                    </th>
                                    <th>
                                        QUANTITY <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th>
                                        PRICE/UNIT <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th>
                                        STATUS <i class="fas fa-sort sort-icon"></i>
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <span class="transaction-indicator indicator-purchase"></span>
                                        Purchase (Main ...
                                    </td>
                                    <td>-</td>
                                    <td>test</td>
                                    <td>14/06/2025</td>
                                    <td>1 Btl</td>
                                    <td>₹ 1,233.00</td>
                                    <td>
                                        <span class="status-badge status-partial">Partial</span>
                                    </td>
                                    <td>
                                        <i class="fas fa-ellipsis-v" style="color: #6c757d; cursor: pointer;"></i>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Add some interactive functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching
            const tabs = document.querySelectorAll('.tab');
            tabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    tabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Search functionality
            const searchInputs = document.querySelectorAll('input[type="text"]');
            searchInputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.transform = 'scale(1.02)';
                });
                input.addEventListener('blur', function() {
                    this.style.transform = 'scale(1)';
                });
            });

            // Add hover effects to cards
            const infoCards = document.querySelectorAll('.info-card');
            infoCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-8px) scale(1.02)';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Sortable table headers
            const sortHeaders = document.querySelectorAll('th');
            sortHeaders.forEach(header => {
                header.addEventListener('click', function() {
                    // Reset all sort icons
                    sortHeaders.forEach(h => {
                        const icon = h.querySelector('.sort-icon');
                        if (icon) {
                            icon.className = 'fas fa-sort sort-icon';
                        }
                    });

                    // Set clicked header to sorted
                    const icon = this.querySelector('.sort-icon');
                    if (icon) {
                        icon.className = 'fas fa-sort-down sort-icon';
                    }
                });
            });
        });
    </script>
