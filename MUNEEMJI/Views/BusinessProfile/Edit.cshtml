@model BusinessProfileModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";   // no shared layout, standalone page:contentReference[oaicite:12]{index=12}
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Profile</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2>Edit Profile</h2>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <!-- Column 1: Business Details -->
                <div class="col-md-4">
                    <h5>Business Details</h5>
                    <div class="form-group">
                        <label asp-for="BusinessName">Business Name</label>
                        <input asp-for="BusinessName" class="form-control" />
                        <span asp-validation-for="BusinessName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Gstin">GSTIN</label>
                        <input asp-for="Gstin" class="form-control" placeholder="Enter GSTIN" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Email ID</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email ID" />
                    </div>
                    <div class="form-group">
                        <label>Business Logo</label>
                        <input type="file" name="LogoFile" class="form-control-file" />
                    </div>
                </div>
                <!-- Column 2: More Details -->
                <div class="col-md-4">
                    <h5>More Details</h5>
                    <div class="form-group">
                        <label>Business Type</label>
                        <select asp-for="BusinessTypeId" asp-items="ViewBag.Types" class="form-control">
                            <option value="">Select Business Type</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Business Category</label>
                        <select asp-for="BusinessCategoryId" asp-items="ViewBag.Categories" class="form-control">
                            <option value="">Select Business Category</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>State</label>
                        <select asp-for="StateId" asp-items="ViewBag.States" class="form-control">
                            <option value="">Select State</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Pincode</label>
                        <input asp-for="Pincode" class="form-control" placeholder="Enter Pincode" />
                    </div>
                </div>
                <!-- Column 3: Address & Signature -->
                <div class="col-md-4">
                    <h5>Business Address</h5>
                    <div class="form-group">
                        <textarea asp-for="Address" class="form-control" rows="4" placeholder="Enter Business Address"></textarea>
                    </div>
                    <h5>Add Signature</h5>
                    <div class="form-group">
                        <input type="file" name="SignatureFile" class="form-control-file" />
                    </div>
                </div>
            </div>
            <!-- Buttons -->
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
