@model GodownViewModel

@{
    ViewData["Title"] = "Manage Godowns";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">Manage Godowns</h2>
                <div>
                    <button class="btn btn-outline-danger me-2" onclick="transferStock()">
                        <i class="fas fa-exchange-alt"></i> Transfer Stock
                    </button>
                    <button class="btn btn-danger" onclick="openAddGodownModal()">
                        <i class="fas fa-plus"></i> Add Godown
                    </button>
                </div>
            </div>

            <!-- Success Banner -->
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <strong>Congratulations!</strong> You can now easily add your godowns and transfer stock between them.
                        <br>
                        <strong>Watch this video to learn more about Godown Management</strong>
                    </div>
                    <div class="ms-3">
                        <div class="video-thumbnail position-relative">
                            <img src="data:image/svg+xml;base64," alt="Video Thumbnail" class="rounded">
                            <button class="btn btn-danger btn-sm position-absolute top-50 start-50 translate-middle" onclick="playVideo()">
                                <i class="fas fa-play"></i> Play Video
                            </button>
                        </div>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>

            <!-- Main Godown Section -->
            <div class="card mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title mb-0">Main Godown</h5>
                            <span class="badge bg-warning text-dark">@Model.MainGodown</span>
                        </div>
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </button>
                    </div>
                </div>
            </div>

            <!-- Godowns List -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Your Godowns (@Model.TotalGodowns)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Godowns.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>
                                            <i class="fas fa-warehouse me-2"></i>
                                            GODOWN NAME
                                        </th>
                                        <th>GODOWN TYPE</th>
                                        <th>CONTACT DETAILS</th>
                                        <th>LOCATION</th>
                                        <th>ACTIONS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var godown in Model.Godowns)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <i class="fas fa-store-alt text-primary fs-4"></i>
                                                    </div>
                                                    <strong>@godown.GodownName</strong>
                                                </div>
                                            </td>
                                            <td>@godown.GodownType</td>
                                            <td>@godown.PhoneNo</td>
                                            <td>@godown.GodownAddress</td>
                                            <td>
                                                <button class="btn btn-outline-primary btn-sm" onclick="editGodown(@godown.Id)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-warehouse text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3 text-muted">No godowns found</h5>
                            <p class="text-muted">Click "Add Godown" to create your first godown</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Godown Modal -->
<div class="modal fade" id="addGodownModal" tabindex="-1" aria-labelledby="addGodownModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addGodownModalLabel">Add Godown</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="addGodownForm">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="godownType" class="form-label">Godown Type <span class="text-danger">*</span></label>
                            <select class="form-select" id="godownType" name="GodownType" required>
                                <option value="">Select</option>
                                <option value="Retail Store">Retail Store</option>
                                <option value="Warehouse">Warehouse</option>
                                <option value="Distribution Center">Distribution Center</option>
                                <option value="Manufacturing Unit">Manufacturing Unit</option>
                                <option value="Cold Storage">Cold Storage</option>
                                <option value="Others">Others</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="godownName" class="form-label">Godown Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="godownName" name="GodownName" placeholder="Enter Godown Name" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="phoneNo" class="form-label">Phone No <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="phoneNo" name="PhoneNo" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="emailId" class="form-label">Email ID</label>
                            <input type="email" class="form-control" id="emailId" name="EmailId">
                        </div>
                    </div>

                    <h6 class="mt-4 mb-3">More Information</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="gstin" class="form-label">GSTIN</label>
                            <input type="text" class="form-control" id="gstin" name="GSTIN">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="godownPincode" class="form-label">Godown Pincode</label>
                            <input type="text" class="form-control" id="godownPincode" name="GodownPincode">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="godownAddress" class="form-label">Godown Address</label>
                        <textarea class="form-control" id="godownAddress" name="GodownAddress" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Wait for DOM to be ready
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded');
            initializeFormHandler();
        });

        function initializeFormHandler() {
            const form = document.getElementById('addGodownForm');
            if (!form) {
                console.error('Form not found');
                return;
            }

            form.addEventListener('submit', function(e) {
                e.preventDefault();
                console.log('Form submission started');

                try {
                    // Validate required fields
                    let isValid = true;
                    let errorMessage = '';

                    const godownName = document.getElementById('godownName').value.trim();
                    const godownType = document.getElementById('godownType').value;
                    const phoneNo = document.getElementById('phoneNo').value.trim();

                    if (!godownName) {
                        isValid = false;
                        errorMessage += 'Godown Name is required.\n';
                    }

                    if (!godownType) {
                        isValid = false;
                        errorMessage += 'Godown Type is required.\n';
                    }

                    if (!phoneNo) {
                        isValid = false;
                        errorMessage += 'Phone Number is required.\n';
                    }

                    if (!isValid) {
                        alert('Please fix the following errors:\n' + errorMessage);
                        return;
                    }

                    // Create the data object
                    const formData = {
                        GodownName: godownName,
                        GodownType: godownType,
                        PhoneNo: phoneNo,
                        EmailId: document.getElementById('emailId').value.trim() || null,
                        GSTIN: document.getElementById('gstin').value.trim() || null,
                        GodownAddress: document.getElementById('godownAddress').value.trim() || null,
                        GodownPincode: document.getElementById('godownPincode').value.trim() || null
                    };

                    console.log('Form data:', formData);

                    // Show loading state
                    const saveBtn = form.querySelector('button[type="submit"]');
                    const originalText = saveBtn.innerHTML;
                    saveBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Saving...';
                    saveBtn.disabled = true;

                    // Get anti-forgery token
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    const token = tokenInput ? tokenInput.value : '';

                    // Create XMLHttpRequest
                    const xhr = new XMLHttpRequest();
                    xhr.open('POST', '/Godown/CreateAjax', true);
                    xhr.setRequestHeader('Content-Type', 'application/json; charset=utf-8');
                    xhr.setRequestHeader('X-Requested-With', 'XMLHttpRequest');
                    if (token) {
                        xhr.setRequestHeader('RequestVerificationToken', token);
                    }

                    xhr.onreadystatechange = function() {
                        if (xhr.readyState === XMLHttpRequest.DONE) {
                            // Reset button state
                            saveBtn.innerHTML = originalText;
                            saveBtn.disabled = false;

                            if (xhr.status === 200) {
                                try {
                                    const response = JSON.parse(xhr.responseText);
                                    console.log('Success response:', response);

                                    if (response.success) {
                                        // Hide modal
                                        const modal = bootstrap.Modal.getInstance(document.getElementById('addGodownModal'));
                                        if (modal) {
                                            modal.hide();
                                        }

                                        // Show success message
                                        showSuccessMessage(response.message);

                                        // Reload page after delay
                                        setTimeout(() => location.reload(), 1500);
                                    } else {
                                        console.error('Server error:', response);
                                        alert('Error: ' + response.message);
                                    }
                                } catch (parseError) {
                                    console.error('Error parsing response:', parseError);
                                    alert('Error parsing server response');
                                }
                            } else {
                                console.error('AJAX Error:');
                                console.error('Status:', xhr.status);
                                console.error('Response:', xhr.responseText);

                                let errorMessage = 'An error occurred while saving the godown.';

                                switch (xhr.status) {
                                    case 404:
                                        errorMessage = 'Endpoint not found. Check your routing.';
                                        break;
                                    case 400:
                                        errorMessage = 'Bad request. Check your data format.';
                                        break;
                                    case 500:
                                        errorMessage = 'Server error. Check server logs.';
                                        break;
                                }

                                alert(errorMessage + ' Status: ' + xhr.status);
                            }
                        }
                    };

                    xhr.onerror = function() {
                        saveBtn.innerHTML = originalText;
                        saveBtn.disabled = false;
                        alert('Network error occurred');
                    };

                    xhr.send(JSON.stringify(formData));

                } catch (err) {
                    console.error("Error in submit handler:", err);
                    alert("An unexpected error occurred: " + err.message);
                }
            });

            // Reset form when modal is closed
            const modal = document.getElementById('addGodownModal');
            if (modal) {
                modal.addEventListener('hidden.bs.modal', function() {
                    document.getElementById('addGodownForm').reset();
                });
            }
        }

        function showSuccessMessage(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show position-fixed';
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999;';
            alertDiv.setAttribute('role', 'alert');
            alertDiv.innerHTML = `
                <i class="fas fa-check-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);

            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.parentNode.removeChild(alertDiv);
                }
            }, 5000);
        }

        function openAddGodownModal() {
            try {
                const modalElement = document.getElementById('addGodownModal');
                if (modalElement && typeof bootstrap !== 'undefined') {
                    const modal = new bootstrap.Modal(modalElement);
                    modal.show();
                } else {
                    console.error('Bootstrap is not available or modal element not found');
                    alert('Unable to open modal. Please check if Bootstrap is loaded.');
                }
            } catch (error) {
                console.error('Error opening modal:', error);
                alert('Error opening modal: ' + error.message);
            }
        }

        function transferStock() {
            alert('Transfer Stock functionality to be implemented');
        }

        function playVideo() {
            alert('Video player functionality to be implemented');
        }

        function editGodown(id) {
            window.location.href = '/Godown/Edit/' + id;
        }
    </script>
}

