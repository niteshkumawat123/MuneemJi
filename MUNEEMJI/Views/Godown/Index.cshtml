    <style>
        .video-thumbnail img {
            width: 100px;
            height: 60px;
            object-fit: cover;
        }

        .table th {
            font-weight: 600;
            font-size: 0.875rem;
            color: #6c757d;
            border-bottom: 2px solid #dee2e6;
        }

        .badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }

        .alert-primary {
            background-color: #cfe2ff;
            border-color: #b8d4ff;
            color: #052c65;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
