<!-- Views/Inventory/_ProductsPartial.cshtml -->
@model List<Product>

<div class="row">
    <!-- Left Sidebar: Product List -->
    <div class="col-md-4 border-right sidebar-panel">
        <div class="d-flex align-items-center justify-content-between mb-2">
            <h5>ITEMS</h5>
            <button class="btn btn-warning btn-sm" id="btnAddProduct">+ Add Item</button>
        </div>
        <table class="table table-sm table-hover">
            <thead class="thead-light">
                <tr><th>Item</th><th>Quantity</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="product-row" data-id="@item.Id">
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>
                            <button class="btn btn-sm btn-light delete-product" data-id="@item.Id" title="Delete">
                                &times;
                            </button>
                        </td>
                    </tr>
                }
                @if (!Model.Any())
                {
                    <tr><td colspan="3" class="text-center">No products found.</td></tr>
                }
            </tbody>
        </table>
    </div>
    <!-- Right Panel: Product Details -->
    <div class="col-md-8">
        <div class="d-flex align-items-center justify-content-between">
            <h4 id="detailName">Select a product</h4>
            <button class="btn btn-primary btn-sm" id="btnEditProduct">Adjust Item</button>
        </div>
        <p>Sale Price: <strong id="detailSalePrice">-</strong></p>
        <p>Purchase Price: <strong id="detailPurchasePrice">-</strong></p>
        <p>
            Stock Quantity: <span id="detailQuantity">-</span>,
            Stock Value: <span id="detailStockValue">-</span>
        </p>
        <hr />
        <h5>Transactions</h5>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Invoice/Ref</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Quantity</th>
                    <th>Price/Unit</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr><td colspan="7" class="text-center">No transactions to show.</td></tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Product Add/Edit Modal -->
<div class="modal fade" id="productModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add / Edit Product</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Sale Price</label>
                    <input type="number" step="0.01" name="SalePrice" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Purchase Price</label>
                    <input type="number" step="0.01" name="PurchasePrice" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Quantity</label>
                    <input type="number" name="Quantity" class="form-control" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSaveProduct" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>
