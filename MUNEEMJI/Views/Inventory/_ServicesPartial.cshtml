<!-- Views/Inventory/_ServicesPartial.cshtml -->
@model List<Service>

<div>
    @if (!Model.Any())
    {
        <!-- Empty state -->
        <div class="text-center mt-5">
            <img src="https://via.placeholder.com/150" alt="No services" class="mb-3" />
            <p>Add services you provide to your customers and create Sale invoices for them faster.</p>
            <button class="btn btn-warning" id="btnAddFirstService">Add Your First Service</button>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between mb-2">
            <h5>SERVICES</h5>
            <button class="btn btn-warning" id="btnAddService">+ Add Service</button>
        </div>
        <table class="table table-sm table-hover">
            <thead class="thead-light">
                <tr><th>Name</th><th>Price</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var serv in Model)
                {
                    <tr>
                        <td class="service-name">@serv.Name</td>
                        <td class="service-price">@serv.Price</td>
                        <td>
                            <button class="btn btn-sm btn-light edit-service" data-id="@serv.Id" title="Edit">
                                &#9998;
                            </button>
                            <button class="btn btn-sm btn-light delete-service" data-id="@serv.Id" title="Delete">
                                &times;
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Service Add/Edit Modal -->
<div class="modal fade" id="serviceModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add / Edit Service</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="Name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" step="0.01" name="Price" class="form-control" required />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSaveService" class="btn btn-success">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </form>
    </div>
</div>
