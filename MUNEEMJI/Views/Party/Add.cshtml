@model MUNEEMJI.Models.PartyModel

@{
    ViewData["Title"] = "Add Party";
}

<div class="container mt-4">
    <h2>Add Party</h2>
    <form asp-action="Add" method="post">
        <div class="row mb-3">
            <div class="col-md-4">
                <label>Party Name *</label>
                <input asp-for="PartyName" class="form-control" required />
            </div>
            <div class="col-md-4">
                <label>GSTIN</label>
                <input asp-for="GSTIN" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#gstTab">GST & Address</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#creditTab">Credit & Balance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#additionalTab">Additional Fields</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <!-- GST & Address -->
            <div class="tab-pane fade show active" id="gstTab">
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label>GST Type</label>
                        <select asp-for="GSTType" class="form-select">
                            <option>Unregistered/Consumer</option>
                            <option>Registered Business</option>
                            <option>Composition Scheme</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>State</label>
                        <select asp-for="State" class="form-select">
                            <option>-- Select State --</option>
                            <option>Rajasthan</option>
                            <option>Delhi</option>
                            <option>Maharashtra</option>
                            <!-- Add more states -->
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Email ID</label>
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label>Billing Address</label>
                        <textarea asp-for="BillingAddress" class="form-control"></textarea>
                    </div>
                    <div class="col-md-6">
                        <label>Shipping Address</label>
                        
                        <div class="form-check mt-2">
                            <input type="checkbox" class="form-check-input" asp-for="IsShippingDisabled" />
                            <label class="form-check-label">Disable Shipping Address</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Credit & Balance -->
            <div class="tab-pane fade" id="creditTab">
                <p>Credit and balance form fields here...</p>
            </div>

            <!-- Additional Fields -->
            <div class="tab-pane fade" id="additionalTab">
                <p>Additional fields form section here...</p>
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" name="save" value="new" class="btn btn-outline-primary">Save & New</button>
            <button type="submit" name="save" value="save" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>
