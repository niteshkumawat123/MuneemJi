@model MUNEEMJI.Models.PartyModel

@{
    ViewData["Title"] = "Add Party";
    var shippingDisabled = Model.IsShippingDisabled ? "disabled" : "";
    var field1Disabled = Model.AdditionalField1Enabled ? "" : "disabled";
    var field2Disabled = Model.AdditionalField2Enabled ? "" : "disabled";
    var field3Disabled = Model.AdditionalField3Enabled ? "" : "disabled";
    var field4Disabled = Model.AdditionalField4Enabled ? "" : "disabled";
}

@section Styles {
    <style>
        .field {
            margin-bottom: 15px;
        }

        .toggle-container {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 10px;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 40px;
            height: 20px;
        }

            .switch input {
                opacity: 0;
                width: 0;
                height: 0;
            }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 20px;
        }

            .slider:before {
                position: absolute;
                content: "";
                height: 16px;
                width: 16px;
                left: 2px;
                bottom: 2px;
                background-color: white;
                transition: .4s;
                border-radius: 50%;
            }

        input:checked + .slider {
            background-color: #3b82f6;
        }

            input:checked + .slider:before {
                transform: translateX(20px);
            }

        .toggle-label {
            font-size: 14px;
            cursor: pointer;
        }

        .blue-text {
            color: #3b82f6;
            font-weight: bold;
        }

        .hidden {
            display: none;
        }
    </style>
}

<div class="container mt-4">
    <h2>Add Party</h2>
    <form asp-action="Edit" method="post">
        <div class="row mb-3">
            <div class="col-md-4 field">
                <label asp-for="PartyName">Party Name *</label>
                <input asp-for="PartyName" class="form-control" required />
                <span asp-validation-for="PartyName" class="text-danger"></span>
            </div>
            <div class="col-md-4 field">
                <label asp-for="GSTIN">GSTIN</label>
                <input asp-for="GSTIN" class="form-control" />
                <span asp-validation-for="GSTIN" class="text-danger"></span>
            </div>
            <div class="col-md-4 field">
                <label asp-for="PhoneNumber">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#gstTab">GST & Address</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#creditTab">Credit & Balance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#additionalTab">Additional Fields</a>
            </li>
        </ul>

        <div class="tab-content mt-3">
            <div class="tab-pane fade show active" id="gstTab">
                <div class="row mb-3">
                    <div class="col-md-4 field">
                        <label asp-for="GSTType">GST Type</label>
                        <select asp-for="GSTType" class="form-select">
                            <option value="Unregistered/Consumer">Unregistered/Consumer</option>
                            <option value="Registered Business">Registered Business</option>
                            <option value="Composition Scheme">Composition Scheme</option>
                        </select>
                        <span asp-validation-for="GSTType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 field">
                        <label asp-for="State">State</label>
                        <select asp-for="State" class="form-select">
                            <option value="">-- Select State --</option>
                            <option>Rajasthan</option>
                            <option>Delhi</option>
                            <option>Maharashtra</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 field">
                        <label asp-for="Email">Email ID</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6 field">
                        <label asp-for="BillingAddress">Billing Address</label>
                        <textarea asp-for="BillingAddress" class="form-control"></textarea>
                        <span asp-validation-for="BillingAddress" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 field">
                        <label asp-for="ShippingAddress">Shipping Address</label>
                        <textarea asp-for="ShippingAddress" class="form-control" disabled="@shippingDisabled"></textarea>
                        <div class="form-check mt-2">
                            <input asp-for="IsShippingDisabled" class="form-check-input" />
                            <label class="form-check-label" asp-for="IsShippingDisabled">Disable Shipping Address</label>
                        </div>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="creditTab">
                <div class="row mb-3">
                    <div class="col-md-4 field">
                        <label asp-for="OpeningBalance">Opening Balance</label>
                        <input asp-for="OpeningBalance" class="form-control" placeholder="Opening Balance" />
                        <span asp-validation-for="OpeningBalance" class="text-danger" oninput="autoCheck('EnableOpeningBalance')"></span>
                    </div>
                    <!-- Direction: To Pay / To Receive -->
                    <div class="mb-3">
                        <input type="radio" id="ToPay" name="BalanceDirection" value="ToPay"
                        @(Model.BalanceDirection == "ToPay" ? "checked" : "") onclick="autoCheck('EnableOpeningBalance')" />
                        <label for="ToPay">To Pay</label>

                        <input type="radio" id="ToReceive" name="BalanceDirection" value="ToReceive"
                        @(Model.BalanceDirection == "ToReceive" ? "checked" : "") onclick="autoCheck('EnableOpeningBalance')" />
                        <label for="ToReceive">To Receive</label>
                    </div>

                    <!-- Hidden Checkbox to store state (checked by JS) -->
                    <input type="checkbox" id="EnableOpeningBalance" name="EnableOpeningBalance"
                           style="display: none;" @(Model.EnableOpeningBalance ? "checked" : "") />
                    <div class="col-md-4 field">
                        <label asp-for="AsOfDate">As Of Date</label>
                        <input asp-for="AsOfDate" type="date" class="form-control" />
                        <span asp-validation-for="AsOfDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="credit-limit-label field">
                    <label>Credit Limit <span title="Set a limit to restrict credit">&#9432;</span></label>
                </div>

                <div class="toggle-container field">
                    <span id="noLimitLabel" class="toggle-label">No Limit</span>
                    <label class="switch">
                        <input type="checkbox" asp-for="HasCustomCreditLimit" id="creditToggle">
                        <span class="slider"></span>
                    </label>
                    <span id="customLimitLabel" class="toggle-label">Custom Limit</span>
                </div>

                <div id="creditLimitField" class="field">
                    <label asp-for="CreditLimit" class="hidden" id="creditLimitLabel">Credit Limit</label>
                    <input asp-for="CreditLimit" class="form-control" placeholder="Credit Limit" />
                    <span asp-validation-for="CreditLimit" class="text-danger"></span>
                </div>
            </div>

            <div class="tab-pane fade" id="additionalTab">
                <!-- Additional Field 1 -->
                <div class="form-check mb-1">
                    <input class="form-check-input" type="checkbox" id="enableField1"
                           onchange="toggleField('field1', this)"
                    @(Model.AdditionalField1Enabled != null ? "checked" : "") />
                    <label class="form-check-label" for="enableField1">Enable Additional Field 1</label>
                </div>
                <input type="text" class="form-control mb-3" id="field1" name="AdditionalField1"
                       placeholder="Additional Field 1 Name"
                       value="@Model.AdditionalField1Value"
                @(Model.AdditionalField1Value != null ? "" : "disabled") />


                <!-- Additional Field 2 -->
                <div class="form-check mb-1">
                    <input class="form-check-input" type="checkbox" id="enableField2"
                           onchange="toggleField('field2', this)"
                    @(Model.AdditionalField2Enabled != null ? "checked" : "") />
                    <label class="form-check-label" for="enableField2">Enable Additional Field 2</label>
                </div>
                <input type="text" class="form-control mb-3" id="field2" name="AdditionalField2"
                       placeholder="Additional Field 2 Name"
                       value="@Model.AdditionalField2Value"
                @(Model.AdditionalField2Value != null ? "" : "disabled") />


                <!-- Additional Field 3 -->
                <div class="form-check mb-1">
                    <input class="form-check-input" type="checkbox" id="enableField3"
                           onchange="toggleField('field3', this)"
                    @(Model.AdditionalField3Enabled != null ? "checked" : "") />
                    <label class="form-check-label" for="enableField3">Enable Additional Field 3</label>
                </div>
                <input type="text" class="form-control mb-3" id="field3" name="AdditionalField3"
                       placeholder="Additional Field 3 Name"
                       value="@Model.AdditionalField3Value"
                @(Model.AdditionalField3Value != null ? "" : "disabled") />


                <!-- Additional Field 4 (Date) -->
                <div class="form-check mb-1">
                    <input class="form-check-input" type="checkbox" id="enableField4"
                           onchange="toggleField('field4', this)"
                    @(Model.AdditionalField4Enabled != null ? "checked" : "") />
                    <label class="form-check-label" for="enableField4">Enable Additional Field 4</label>
                </div>
                <input type="date" class="form-control mb-3" id="field4" name="AdditionalField4"
                       value="@(Model.AdditionalField4Value?.ToString("yyyy-MM-dd"))"
                @(Model.AdditionalField4Value != null ? "" : "disabled") />
            </div>
        </div>

        <div class="mt-3 text-end">
            <button type="submit" name="save" value="new" class="btn btn-outline-primary">Save & New</button>
            <button type="submit" name="save" value="save" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const toggle = document.getElementById('creditToggle');
        const creditLimitField = document.getElementById('creditLimitField');
        const noLimitLabel = document.getElementById('noLimitLabel');
        const customLimitLabel = document.getElementById('customLimitLabel');
        const creditLimitInput = document.querySelector('[asp-for="CreditLimit"]');
        const creditLimitLabel = document.getElementById('creditLimitLabel');

        function updateCreditLimitVisibility(isChecked) {
            if (isChecked) {
                creditLimitField.classList.remove('hidden');
                noLimitLabel.classList.remove('blue-text');
                customLimitLabel.classList.add('blue-text');
                if (creditLimitLabel) creditLimitLabel.classList.remove('hidden');
                if (creditLimitInput) creditLimitInput.disabled = false;
            } else {
                creditLimitField.classList.add('hidden');
                customLimitLabel.classList.remove('blue-text');
                noLimitLabel.classList.add('blue-text');
                if (creditLimitLabel) creditLimitLabel.classList.add('hidden');
                if (creditLimitInput) creditLimitInput.disabled = true;
            }
        }

        document.addEventListener('DOMContentLoaded', function () {
            updateCreditLimitVisibility(toggle.checked);
        });

        toggle.addEventListener('change', function () {
            updateCreditLimitVisibility(this.checked);
        });

        function toggleField(fieldId, checkbox) {
            const field = document.getElementById(fieldId);
            field.disabled = !checkbox.checked;
        }

        // Optional: auto-enable fields if checkboxes are pre-checked (for edit mode)
        window.onload = function () {
            ['1', '2', '3', '4'].forEach(function (num) {
                const cb = document.getElementById('enableField' + num);
                toggleField('field' + num, cb);
            });
        };

        function autoCheck(checkboxId) {
            const checkbox = document.getElementById(checkboxId);
            if (checkbox) checkbox.checked = true;
        }
    </script>
}
