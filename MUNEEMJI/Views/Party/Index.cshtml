@model PartyViewModel
@{
    ViewData["Title"] = "Parties";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center py-3 border-bottom">
        <div class="d-flex align-items-center">
            <h4 class="mb-0 me-2">Parties</h4>
            <i class="bi bi-chevron-down"></i>
        </div>
        <button class="btn btn-danger btn-sm" onclick="window.location.href='/Web/party/add'">
            <i class="bi bi-plus"></i> Add Party
        </button>
    </div>

    <div class="row g-0">
        <!-- Left Sidebar: Party Search and List -->
        <div class="col-md-4 border-end" style="height: calc(100vh - 120px); overflow-y: auto;">
            <!-- Search Box -->
            <div class="p-3 border-bottom">
                <div class="position-relative">
                    <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-2 text-muted"></i>
                    <input type="text" class="form-control ps-4" placeholder="Search Party Name" />
                </div>
            </div>

            <!-- Party List Header -->
            <div class="d-flex justify-content-between align-items-center p-3 bg-light small text-muted border-bottom">
                <div class="d-flex align-items-center">
                    <span>Party Name</span>
                    <i class="bi bi-funnel ms-1"></i>
                </div>
                <div class="d-flex align-items-center">
                    <span>Amount</span>
                    <i class="bi bi-funnel ms-1"></i>
                </div>
            </div>

            <!-- Party List -->
            <div class="list-group list-group-flush">
                @foreach (var party in Model.Parties)
                {
                    <a class="list-group-item list-group-item-action border-0 d-flex justify-content-between align-items-center py-3 @(party.Id == Model.SelectedParty?.Id ? "bg-primary text-white" : "")"
                       asp-action="Index" asp-route-id="@party.Id">
                        <span>@party.PartyName</span>
                        <span class="fw-bold">
                            ₹ @((party?.OpeningBalance ?? 0) > 0
                              ? party?.OpeningBalance?.ToString("0.00") ?? "0.00"
                              : "0.00")
                        </span>
                    </a>
                }
            </div>
        </div>

        <!-- Right Panel: Party Details and Transactions -->
        <div class="col-md-8">
            @if (Model.SelectedParty != null)
            {
                <!-- Party Details Header -->
                <div class="p-4 border-bottom">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <h5 class="mb-0 d-flex align-items-center">
                            @Model.SelectedParty.PartyName
                            <a asp-action="Edit" asp-route-id="@Model.SelectedParty.Id" class="btn btn-sm btn-outline-secondary ms-2 p-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </h5>
                        <div class="d-flex gap-2">
                            <span class="badge bg-warning text-dark">0</span>
                            <i class="bi bi-whatsapp text-success" style="font-size: 1.2rem;"></i>
                            <i class="bi bi-bell text-muted" style="font-size: 1.2rem;"></i>
                        </div>
                    </div>

                    <!-- Party Information Grid -->
                    <div class="row g-3">
                        <div class="col-md-3">
                            <small class="text-muted">Phone Number</small>
                            <div class="fw-medium">@(Model.SelectedParty.PhoneNumber ?? "N/A")</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Email</small>
                            <div class="fw-medium">@(Model.SelectedParty.Email ?? "N/A")</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">GSTIN</small>
                            <div class="fw-medium">@(Model.SelectedParty.GSTIN ?? "N/A")</div>
                        </div>
                        <div class="col-md-3">
                            <small class="text-muted">Billing Address</small>
                            <div class="fw-medium">@(Model.SelectedParty.BillingAddress ?? "N/A")</div>
                        </div>
                    </div>
                </div>

                <!-- Transactions Section -->
                <div class="p-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Transactions</h6>
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-search"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-printer"></i>
                            </button>
                            <button class="btn btn-sm btn-success">
                                <i class="bi bi-file-earmark-excel"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Transactions Table -->
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <span>Type</span>
                                            <i class="bi bi-funnel ms-1 text-muted"></i>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <span>Number</span>
                                            <i class="bi bi-funnel ms-1 text-muted"></i>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <span>Date</span>
                                            <i class="bi bi-funnel ms-1 text-muted"></i>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <span>Total</span>
                                            <i class="bi bi-funnel ms-1 text-muted"></i>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <span>Balance</span>
                                            <i class="bi bi-funnel ms-1 text-muted"></i>
                                        </div>
                                    </th>
                                    <th class="border-0"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.SelectedParty != null )
                                {
                                        <tr>
                                        <td>@(Model.SelectedParty?.PartyName != null ? Model.SelectedParty.PartyName : "Opening Balance")</td>
                                        <td> -</td>
                                            <td>@(Model.SelectedParty?.AsOfDate?.ToString("dd/MM/yyyy") ?? "")</td>
                                            <td>₹ @(Model.SelectedParty?.OpeningBalance?.ToString("0.00") ?? "0.00")</td>
                                        <td>
                                            ₹ @((Model.SelectedParty?.OpeningBalance ?? 0) > 0
                                              ? (Model.SelectedParty?.OpeningBalance.Value.ToString("0.00") ?? "0.00")
                                              : "0.00")
                                        </td>
                                        <td>
                                                <button class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    
                                }
                                else
                                {
                                    <!-- Opening Balance Row (if any) -->
                                    @if (Model.SelectedParty.Balance != 0)
                                    {
                                        <tr class="bg-light">
                                            <td>Receivable Opening Balance</td>
                                            <td></td>
                                            <td>02/07/2025</td>
                                            <td>₹ @Model.SelectedParty.Balance.Value.ToString("0.00")</td>
                                            <td>₹ @Model.SelectedParty.Balance.Value.ToString("0.00")</td>
                                            <td>
                                                <button class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-three-dots"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <!-- No Party Selected State -->
                <div class="d-flex align-items-center justify-content-center h-100">
                    <div class="text-center text-muted">
                        <i class="bi bi-person-plus" style="font-size: 3rem;"></i>
                        <div class="mt-2">Select a party to view details</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



<style>
    .list-group-item.active {
        background-color: #0d6efd !important;
        border-color: #0d6efd !important;
    }

    .table th {
        font-weight: 500;
        font-size: 0.875rem;
        color: #6c757d;
    }

    .bg-light {
        background-color: #f8f9fa !important;
    }
</style>