@* _Layout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - MyApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            overflow-x: hidden;
        }
        /* Sidebar styling to match screenshot */
        #sidebar {
            min-width: 250px;
            max-width: 250px;
            min-height: 100vh;
        }

            #sidebar .nav-link {
                color: #fff;
            }

                #sidebar .nav-link:hover {
                    background-color: #1b2736;
                }

                #sidebar .nav-link i {
                    margin-right: 8px;
                }

                #sidebar .nav-link.active {
                    background-color: #1a3e52;
                }

            #sidebar .sidebar-header, #sidebar .sidebar-footer {
                color: #fff;
                padding: 0.75rem 1rem;
            }

                #sidebar .sidebar-header a, #sidebar .sidebar-header button {
                    color: #adb5bd;
                    margin-right: 1rem;
                    margin-right: 1rem;
                }

            #sidebar .sidebar-search .input-group-text {
                background-color: #212529;
                border: none;
                color: #adb5bd;
            }

            #sidebar .sidebar-search .form-control {
                background-color: #212529;
                border: none;
                color: #fff;
            }

            #sidebar .sidebar-search .btn {
                color: #adb5bd;
                background-color: #212529;
                border: none;
            }

            #sidebar .sidebar-footer {
                position: absolute;
                bottom: 0;
                width: 100%;
                background-color: #2a3a4e;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

                #sidebar .sidebar-footer a {
                    color: #adb5bd;
                    text-decoration: none;
                }

                    #sidebar .sidebar-footer a:hover {
                        color: #fff;
                    }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark position-relative">
            <!-- Sidebar Header (Company, Help, Shortcuts) -->
            <div class="sidebar-header d-flex align-items-center border-bottom border-secondary">
                <h4 class="mb-0 text-white"><i class="bi bi-building"></i> Company</h4>
                <div class="ms-auto">
                    <a href="#" class="me-3 text-secondary">Help</a>
                    <a href="#" class="me-3 text-secondary">Shortcuts</a>
                    <button class="btn btn-sm text-secondary"><i class="bi bi-arrow-clockwise"></i></button>
                </div>
            </div>
            <!-- Search Input -->
            <div class="sidebar-search p-3 border-bottom border-secondary">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" placeholder="Open Anything (Ctrl+F)" aria-label="Search" />
                    <button class="btn"><i class="bi bi-chevron-left"></i></button>
                </div>
            </div>
            <!-- Sidebar Navigation Menu -->
            <ul class="nav nav-pills flex-column mt-3">
                <!-- Home -->
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-house"></i> Home
                    </a>
                </li>
                <!-- Parties (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#partiesMenu"
                       role="button" aria-expanded="false" aria-controls="partiesMenu">
                        <i class="bi bi-people"></i> Parties
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="partiesMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="/party/index" class="nav-link">All Parties</a></li>
                            <li><a href="/party/add" class="nav-link">Add Party</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Items (no submenu, has plus icon) -->
                @* <li class="nav-item"> *@
                @*     <a class="nav-link" href="#"> *@
                @*         <i class="bi bi-bag"></i> Items *@
                @*         <i class="bi bi-plus float-end"></i> *@
                @*     </a> *@
                @* </li> *@
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#partiesMenu"
                       role="button" aria-expanded="false" aria-controls="partiesMenu">
                        <i class="bi bi-people"></i> Items
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="partiesMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="/inventory/Index" class="nav-link">All Items</a></li>
                            <li><a href="/items/create" class="nav-link">Add Item</a></li>
                        </ul>
                    </div>
                </li>


                <!-- Sale (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#saleMenu"
                       role="button" aria-expanded="false" aria-controls="saleMenu">
                        <i class="bi bi-receipt"></i> Sale
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="saleMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">New Invoice</a></li>
                            <li><a href="#" class="nav-link">View Reports</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Purchase & Expense (collapsible, active) -->
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="collapse" href="#purchaseMenu"
                       role="button" aria-expanded="true" aria-controls="purchaseMenu">
                        <i class="bi bi-cart3"></i> Purchase &amp; Expense
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse show" id="purchaseMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">New Purchase</a></li>
                            <li><a href="#" class="nav-link">Expense Report</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Grow Your Business (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#growMenu"
                       role="button" aria-expanded="false" aria-controls="growMenu">
                        <i class="bi bi-graph-up"></i> Grow Your Business
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="growMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">Business Plan</a></li>
                            <li><a href="#" class="nav-link">Analytics</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Cash & Bank (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#cashMenu"
                       role="button" aria-expanded="false" aria-controls="cashMenu">
                        <i class="bi bi-bank"></i> Cash &amp; Bank
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="cashMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">Cash Ledger</a></li>
                            <li><a href="/bank/index" class="nav-link">Bank Accounts</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Reports (no submenu) -->
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-bar-chart"></i> Reports
                    </a>
                </li>
                <!-- Sync, Share & Backup (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#syncMenu"
                       role="button" aria-expanded="false" aria-controls="syncMenu">
                        <i class="bi bi-cloud-arrow-up"></i> Sync, Share &amp; Backup
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="syncMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">Cloud Sync</a></li>
                            <li><a href="#" class="nav-link">Backup Now</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Utilities (collapsible) -->
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="collapse" href="#utilsMenu"
                       role="button" aria-expanded="false" aria-controls="utilsMenu">
                        <i class="bi bi-tools"></i> Utilities
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                    <div class="collapse" id="utilsMenu">
                        <ul class="btn-toggle-nav list-unstyled fw-normal ps-3">
                            <li><a href="#" class="nav-link">Backup Tools</a></li>
                            <li><a href="#" class="nav-link">Config Tools</a></li>
                        </ul>
                    </div>
                </li>
                <!-- Settings (no submenu) -->
                <li class="nav-item mt-auto">
                    <a class="nav-link" href="#">
                        <i class="bi bi-gear"></i> Settings
                    </a>
                </li>
                <!-- Plans & Pricing (no submenu) -->
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="bi bi-trophy"></i> Plans &amp; Pricing
                    </a>
                </li>
            </ul>
            <!-- Sidebar Footer (Developer Info) -->
            <div class="sidebar-footer">
                <a href="BusinessProfile/Edit" class="d-flex align-items-center w-100">
                    <i class="bi bi-plus-circle me-2"></i> Unlinsoftware Development
                    <i class="bi bi-chevron-right ms-auto"></i>
                </a>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-grow-1 p-3">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap Bundle JS (with Popper for collapse) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
